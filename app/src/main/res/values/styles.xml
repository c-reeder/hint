<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyListViewTheme" parent="@style/Widget.AppCompat.ListView">
        <item name="android:textAlignment">center</item>
    </style>

    <style name="CustomDialogTheme" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textAlignment">center</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

<!--    BeginActivity Themes-->
    <style name="BeginTheme" parent="@style/Theme.MaterialComponents.Light.NoActionBar" >
        <item name="android:windowBackground">@color/begin_background_color</item>
        <item name="colorPrimary">@color/beginPrimaryColor</item>
        <item name="colorPrimaryDark">@color/beginPrimaryDarkColor</item>
        <item name="colorSecondary">@color/beginSecondaryColor</item>
        <item name="android:textColor">@color/beginPrimaryTextColor</item>
        <item name="android:textColorSecondary">@color/beginSecondaryTextColor</item>
        <item name="colorAccent">@color/beginSecondaryColor</item>
<!--        android:textSize="20sp"-->
        <item name="fontFamily">@font/blenda_script</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="buttonStyle">@style/BeginButtonTheme</item>
        <item name="android:buttonStyle">@style/BeginButtonTheme</item>
    </style>
    <style name="BeginButtonTheme" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">#000000</item>
    </style>
    <style name="BeginButtonSecondaryTheme" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/beginSecondaryDarkColor</item>
        <item name="backgroundTint">#00000000</item>
    </style>


    <!--    TurnActivity Themes-->
    <style name="TurnTheme" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@color/turn_background_color</item>

    </style>

</resources>
