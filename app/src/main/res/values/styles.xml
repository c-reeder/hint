<resources>
    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:textColorPrimary">@color/beginPrimaryTextColor</item>
        <item name="fontFamily">@font/cream_puff_4</item>
        <item name="android:textSize">50sp</item>
    </style>

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
    </style>

<!--    BeginActivity Themes-->
    <style name="BeginTheme" parent="@style/Theme.MaterialComponents.Light.NoActionBar" >
        <item name="android:windowBackground">@color/begin_background_color</item>
        <item name="colorPrimary">@color/beginPrimaryColor</item>
        <item name="colorPrimaryDark">@color/beginPrimaryDarkColor</item>
        <item name="colorSecondary">@color/beginSecondaryColor</item>
        <item name="android:textColor">@color/beginPrimaryTextColor</item>
        <item name="android:textColorSecondary">@color/beginSecondaryTextColor</item>
        <item name="colorAccent">@color/beginSecondaryColor</item>
<!--        android:textSize="20sp"-->
        <item name="fontFamily">@font/blenda_script</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="buttonStyle">@style/BeginButtonTheme</item>
        <item name="android:buttonStyle">@style/BeginButtonTheme</item>
    </style>
    <style name="BeginButtonTheme" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">#000000</item>
    </style>
    <style name="BeginButtonSecondaryTheme" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/beginSecondaryDarkColor</item>
        <item name="backgroundTint">#00000000</item>
    </style>
    <style name="BeginButtonTerciaryTheme" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">#000000</item>
    </style>

<!--    InstructionsActivity Theme-->
    <style name="InstructionsTheme" parent="@style/Theme.MaterialComponents.Light.NoActionBar" >
        <item name="colorPrimary">@color/begin_background_color</item>
        <item name="android:windowBackground">@color/beginPrimaryLightColor</item>
    </style>
    
    <style name="InstructionsTitleStyle" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:layout_margin">16dp</item>
        <item name="fontFamily">@font/blenda_script</item>
    </style>

    <style name="InstructionsBodyStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:layout_margin">18dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>


    <!--    TurnActivity Themes-->
    <style name="TurnTheme" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@color/turn_background_color</item>
        <item name="colorPrimary">@color/turnPrimaryColor</item>
        <item name="colorPrimaryDark">@color/turnPrimaryDarkColor</item>
        <item name="colorSecondary">@color/turnSecondaryColor</item>
        <item name="android:textColor">@color/turnPrimaryTextColor</item>
        <item name="android:textColorSecondary">@color/turnSecondaryTextColor</item>
        <item name="android:buttonStyle">@style/TurnButtonTheme</item>
        <item name="buttonStyle">@style/TurnButtonTheme</item>
        <item name="fontFamily">@font/blenda_script</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="TurnButtonTheme" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/turnSecondaryDarkColor</item>
        <item name="android:textSize">20sp</item>
    </style>

<!--    WinnerActivity Themes-->
    <style name="WinnerTheme" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/winnerPrimaryColor</item>
        <item name="colorPrimaryDark">@color/winnerPrimaryDarkColor</item>
        <item name="colorAccent">@color/winnerSecondaryColor</item>
        <item name="android:textColor">@color/winnerPrimaryColor</item>
        <item name="android:textColorSecondary">@color/turnSecondaryTextColor</item>
        <item name="fontFamily">@font/blenda_script</item>
        <item name="android:textAllCaps">false</item>
    </style>

<!--    ScoreActivity Themes-->

    <style name="ScoreTheme" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@color/scoreBackgroundColor </item>
        <item name="colorPrimary">@color/scorePrimaryColor</item>
        <item name="colorPrimaryDark">@color/scorePrimaryDarkColor</item>
        <item name="colorAccent">@color/scoreSecondaryColor</item>
        <item name="android:textColor">@color/scorePrimaryDarkColor</item>
        <item name="android:textColorSecondary">@color/turnSecondaryTextColor</item>
        <item name="fontFamily">@font/blenda_script</item>
        <item name="android:textAllCaps">false</item>
        <item name="buttonStyle">@style/ScoreButtonTheme</item>
        <item name="android:buttonStyle">@style/ScoreButtonTheme</item>
    </style>
    <style name="ScoreButtonTheme" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">20sp</item>
    </style>
</resources>
